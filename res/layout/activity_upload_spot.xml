<?xml version="1.0" encoding="utf-8"?>
<ScrollView 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/uploadSpotPanel"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:scrollbarStyle="outsideOverlay" >

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" 
        android:layout_gravity="center|top">


        <ImageView
            android:id="@+id/spotMediaUpload"
            android:layout_width="fill_parent"
            android:layout_height="200dip"
            android:layout_gravity="center"
            android:src="@drawable/ic_world" />
        
        <TextView
            android:id="@+id/txtspot_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Title"
            android:textColor="#040404"
            android:textSize="15dip"
            android:textStyle="bold"
            android:typeface="sans" 
            android:ems="14"/>
        
        <EditText
	        android:id="@+id/editSpotName"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
			android:layout_gravity="center"
	        android:layout_centerHorizontal="true"
	        android:ems="14" >
		</EditText>
		
        
        <TextView
            android:id="@+id/txtspot_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Type"
            android:textColor="#040404"
            android:textSize="15dip"
            android:textStyle="bold"
            android:typeface="sans"
            android:ems="14" />
        
        <Spinner
		    android:id="@+id/spinner_spottypes"
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:ems="14" />
        
        <TextView
            android:id="@+id/txtspot_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Description"
            android:textColor="#040404"
            android:textSize="15dip"
            android:textStyle="bold"
            android:typeface="sans"
            android:ems="14" />
        
		<EditText
	        android:id="@+id/editSpotDescription"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
			android:layout_gravity="center"
	        android:layout_centerHorizontal="true"
	        android:ems="14" >
    	</EditText>
    	
    </LinearLayout>

    

</ScrollView>