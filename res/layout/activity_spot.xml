<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/loadingPanel"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background = "@color/white"
    android:orientation="vertical" 
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:orientation="vertical" 
        android:layout_marginTop="6dp"
        android:elevation="25dp"
         >

        <TextView
            android:id="@+id/spot_name"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="SpotName"
            android:textColor="#040404"
            android:textSize="17sp"
            android:textStyle="bold"
            android:typeface="sans"
            android:paddingLeft="2dp"
            android:paddingBottom="2dp"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:adjustViewBounds="true" />

        <ImageView
            android:id="@+id/spot_image"
            android:layout_width="match_parent"
            android:layout_height="282dp"
            android:layout_gravity="center"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:src="@drawable/ic_world" />
        
        
        <FrameLayout
	        android:id="@+id/spotvideoSurfaceContainer"
	        android:layout_width="fill_parent"
	        android:layout_height="240dp"
	        android:layout_marginBottom="15dp" 
	        android:orientation="vertical">
	        <SurfaceView
	            android:id="@+id/spotvideoSurface"
	            android:layout_width="fill_parent"
	            android:layout_height="240dp"
	             />
	    </FrameLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearLayout1"
        android:orientation="horizontal"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="6dp"
        android:elevation="6dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/likes"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/spot_likes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/like_example"
                android:textColor="#757575"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/spotCreatedat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/dislikes"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/spot_dislikes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/like_example"
                android:textColor="#757575"
                 />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/LinearLayout01"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/linearLayout4"
        android:orientation="horizontal" 
        android:layout_marginLeft="6dp"
        android:layout_marginRight="6dp"
        android:elevation="6dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/TextView06"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/spottype"
                    android:textColor="@color/black"
                    android:layout_marginBottom="15dp"
                     />

                <TextView
                    android:id="@+id/TextView05"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/city"
                    android:layout_marginBottom="15dp"
                    android:textColor="@color/black"
                     />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/spot_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#757575"
                     />

                <TextView
                    android:id="@+id/spot_city"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#757575"
                     />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/TextView07"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/user"
                    android:layout_marginBottom="15dp"
                    android:textColor="@color/black"
                    />

                <TextView
                    android:id="@+id/TextView08"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/followers"
                    android:layout_marginBottom="15dp"
                    android:textColor="@color/black"
                     />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/spot_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#757575"
                     />

                <TextView
                    android:id="@+id/spot_followers"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#757575"
                     />

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignWithParentIfMissing="true"
        android:layout_below="@+id/LinearLayout01"
        android:orientation="vertical"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="6dp"
        android:layout_marginBottom="6dp"
        android:elevation="6dp"
         >

        <TextView
            android:id="@+id/spotDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/description"
            android:textColor="#040404"
             />
        
        <TextView
            android:id="@+id/spot_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#757575"
             />
    </LinearLayout>
    
</RelativeLayout>