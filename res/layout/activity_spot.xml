<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/loadingPanel"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background = "@color/white"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:orientation="vertical"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="6dp"
        android:layout_marginRight="6dp"
        android:elevation="25dp"
         >

        <TextView
            android:id="@+id/spot_name"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="SpotName"
            android:textColor="#040404"
            android:textSize="15dip"
            android:textStyle="bold"
            android:typeface="sans"
            android:paddingLeft="2dp"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_world" 
            android:adjustViewBounds="true" />

        <ImageView
            android:id="@+id/spot_image"
            android:layout_width="match_parent"
            android:layout_height="282dp"
            android:layout_gravity="center"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:paddingLeft="2dp"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:src="@drawable/ic_world" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearLayout1"
        android:orientation="horizontal"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="6dp"
        android:elevation="6dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Likes:" />

            <TextView
                android:id="@+id/spot_likes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="L4"
                android:textColor="#040404"
                android:textSize="15dip"
                android:typeface="sans" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/spotCreatedat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dislikes:" />

            <TextView
                android:id="@+id/spot_dislikes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="D2"
                android:textColor="#040404"
                android:textSize="15dip"
                android:typeface="sans" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/LinearLayout01"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/linearLayout4"
        android:orientation="horizontal" 
        android:layout_marginLeft="6dp"
        android:layout_marginRight="6dp"
        android:elevation="6dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/TextView06"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Spot Type:"
                    android:textColor="#040404"
                    android:layout_marginBottom="15dp"
                    android:textSize="15dip"
                    android:typeface="sans" />

                <TextView
                    android:id="@+id/TextView05"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="City:"
                    android:layout_marginBottom="15dp"
                    android:textColor="#040404"
                    android:textSize="15dip"
                    android:typeface="sans" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/spot_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="aca"
                    android:textColor="#040404"
                    android:textSize="15dip"
                    android:typeface="sans" />

                <TextView
                    android:id="@+id/spot_city"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="cityacaa"
                    android:textColor="#040404"
                    android:textSize="15dip"
                    android:typeface="sans" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/TextView07"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="User:"
                    android:layout_marginBottom="15dp"
                    android:textColor="#040404"
                    android:textSize="15dip"
                    android:typeface="sans" />

                <TextView
                    android:id="@+id/TextView08"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Followers:"
                    android:layout_marginBottom="15dp"
                    android:textColor="#040404"
                    android:textSize="15dip"
                    android:typeface="sans" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/spot_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="oz"
                    android:textColor="#040404"
                    android:textSize="15dip"
                    android:typeface="sans" />

                <TextView
                    android:id="@+id/spot_followers"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="12"
                    android:textColor="#040404"
                    android:textSize="15dip"
                    android:typeface="sans" />

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignWithParentIfMissing="true"
        android:layout_below="@+id/LinearLayout01"
        android:orientation="vertical"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="6dp"
        android:layout_marginBottom="6dp"
        android:elevation="6dp"
         >

        <TextView
            android:id="@+id/spotDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Description:"
            android:textColor="#040404"
            android:textSize="15dip"
            android:typeface="sans" />
        
        <TextView
            android:id="@+id/spot_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Descripcion"
            android:textColor="#040404"
            android:textSize="15dip"
            android:typeface="sans" />
    </LinearLayout>
    
</RelativeLayout>